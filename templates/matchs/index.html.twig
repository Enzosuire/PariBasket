                                    <p class="card-text"><strong>üèü Stade :</strong> {{ match.name }} ({{ match.city }})</p>
                                    <p class="card-text"><strong>üë• Capacit√© :</strong> {{ match.capacity }} places</p>
                                    <a href="{{ path('app_matchs_details', {'id': match.gameId}) }}" class="btn btn-primary btn-block">Voir les d√©tails</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
    .match-card, .past-match-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease-in-out;
        background-color: #f9f9f9;
        border-radius: 12px;
        padding: 15px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    }

    .match-card:hover, .past-match-card:hover {
        transform: translateY(-8px);
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
    }

    .card-divider {
        border-top: 2px solid #e5e5e5;
        margin: 10px 0;
    }

    .past-match-card {
        border-left: 6px solid #28a745;
        background-color: #f1fdf1;
    }

    .match-card {
        border-left: 6px solid #007bff;
        background-color: #f1f6fd;
    }

    h1.text-gradient {
        background: linear-gradient(90deg, #ff6a00, #ee0979);
        -webkit-background-clip: text;
        color: transparent;
    }

    .btn-block {
