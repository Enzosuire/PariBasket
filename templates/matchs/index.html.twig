                            <div class="card shadow-lg border-0 rounded-lg match-card">
                                <div class="card-body">
                                    <h5 class="card-title text-center fw-bold text-dark">
                                        üèÄ {{ match.home_team }} <span class="text-danger">vs</span> {{ match.away_team }}
                                    </h5>
                                    <hr class="card-divider">
